<div class="container mt-4">
  <h1 class="text-center mb-4 pt-4">Longest Word</h1>
  <div class="d-flex justify-content-center">
    <div class="d-flex">
      <% @letters.each do |letter|%>
        <div class="letter d-flex">
          <%= letter %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="d-flex justify-content-center mt-4">
    <form class="d-flex" action="/score" method="POST" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <!-- <%= hidden_field_tag :letters, 'JYEVLFUCHD' %> -->
      <%= hidden_field_tag :letters, @letters.join %>
      <input type="text" name="word"  class="form-control me-2">
      <input type="submit" value="submit!" class="btn btn-primary">
    </form>
  </div>
</div>